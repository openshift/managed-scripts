{
  "$schema": "https://json-schema.org/draft-06/schema#",
  "$id": "https://github.com/openshift/managed-scripts/metadata.schema.json",
  "title": "Metadata",
  "description": "Metadata for managed scripts",
  "type": "object",
  "properties": {
    "file": {
      "description": "File name of the script",
      "type": "string"
    },
    "name": {
      "description": "Parent directory name of the script",
      "type": "string"
    },
    "shortDescription": {
      "description": "A shorter description for tables and lists",
      "type": "string"
    },
    "description": {
      "description": "A brief description of the script",
      "type": "string"
    },
    "author": {
      "description": "Github username of the author",
      "type": "string"
    },
    "language": {
      "description": "The script language",
      "type": "string",
      "enum": [
        "python",
        "bash"
      ]
    },
    "allowedGroups": {
      "description": "Groups who are allowed to run the script",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "labels": {
      "type": "array",
      "description": "Labels that apply to this script",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "description": "Key of the label",
            "type": "string"
          },
          "description": {
            "description": "A brief description of the label",
            "type": "string"
          },
          "values": {
            "description": "Values for the label",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "envs": {
      "type": "array",
      "description": "The environment variables declared on the script",
      "additionalProperties": false,
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "description": "Key of the environment variable",
            "type": "string"
          },
          "description": {
            "description": "A brief description of the environment variable",
            "type": "string"
          },
          "optional": {
            "description": "Whether or not this environment variable is optional",
            "type": "boolean"
          }
        }
      }
    },
    "rbac": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "roles": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/roleRule"
          }
        },
        "clusterRoleRules": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/rules"
          }
        }
      }
    },
    "clusterVersions": {
      "type": "array",
      "description": "List of required cluster versions, supporting 'major.minor.patch' format and wildcards",
      "additionalProperties": false,
      "items": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$|^\\d+\\.\\d+\\.\\*$"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "file",
    "name",
    "description",
    "author",
    "language",
    "allowedGroups"
  ],
  "$defs": {
    "rules": {
      "type": "object",
      "properties": {
        "verbs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "apiGroups": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resourceNames": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [ "verbs", "apiGroups", "resources" ]
    },
    "roleRule": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string"
        },
        "rules": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/rules"
          }
        }
      },
      "required": [ "namespace", "rules" ]
    }
  }
}
